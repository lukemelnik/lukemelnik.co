---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import ContentSearch from "../components/content-search";

// Get all blog posts
const blogPosts = await getCollection("blog", ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

// Total count for "View all" button
const totalBlogPosts = blogPosts.length;
---

<BaseLayout title="Blog" description="Thoughts, ideas, and learnings about development, music, and more">
  <div class="max-w-2xl mx-auto mt-10 min-w-2xl px-4">
    <div class="mb-2">
      <h1>Blog</h1>
      <p>My thoughts, ideas, and learnings about development, music, and various other topics that interest me.</p>
    </div>
    
    <ContentSearch
      client:only 
      collection={blogPosts}
      collectionType="blog"
    />

    {totalBlogPosts > 5 && (
      <div class="mt-8 text-center">
        <a 
          href="/blog/all" 
          class="inline-block bg-foreground text-background rounded-lg px-4 py-2 hover:opacity-90 transition-opacity"
        >
          View all posts
        </a>
      </div>
    )}
  </div>
</BaseLayout>
