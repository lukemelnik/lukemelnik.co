---
import { Menu, X } from "lucide-react";
import SquareIcon from "./SquareIcon.astro";

const navItems = [
  { label: "Blog", href: "/blog", isExternal: false },
  { label: "Projects", href: "/projects", isExternal: false },
  { label: "Recipes", href: "/recipes", isExternal: false },
  {
    label: "Music",
    href: "https://open.spotify.com/artist/4musCItyvLBJYaHClwbTLd",
    isExternal: true,
  },
  { label: "About", href: "/about", isExternal: false },
];
---

<header
  class="bg-background sticky top-0 z-50 mx-auto w-full max-w-2xl border-b"
>
  <div class="mx-auto max-w-2xl px-6 sm:px-0">
    <nav class="px-H flex h-16 w-full items-center justify-between sm:px-0">
      <!-- Logo/Brand -->
      <div
        class="group flex items-center gap-2 text-2xl transition-colors duration-300 hover:text-amber-600"
      >
        <span class="animate-spin-slow">
          <SquareIcon />
        </span>
        <a href="/" class="font-bold"> Luke Melnik </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="menu-toggle" class="md:hidden" aria-label="Toggle menu">
        <span id="menu-icon"><Menu size={30} /></span>
        <span id="close-icon" class="hidden"><X size={30} /></span>
      </button>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex md:gap-6">
        {
          navItems.map(({ label, href, isExternal }) => (
            <li>
              <a
                href={href}
                class="group relative flex items-center text-base transition-colors duration-300 hover:text-amber-600"
                {...(isExternal && {
                  target: "_blank",
                  rel: "noopener noreferrer",
                })}
              >
                <span class="absolute -left-3 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                  â€¢
                </span>
                {label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Mobile Navigation -->
      <div
        id="mobile-menu"
        class="bg-background absolute top-16 right-0 left-0 hidden h-svh border-b md:hidden"
      >
        <ul class="px-4 py-2 text-2xl">
          {
            navItems.map(({ label, href, isExternal }) => (
              <li>
                <a
                  href={href}
                  class="block py-2"
                  {...(isExternal && {
                    target: "_blank",
                    rel: "noopener noreferrer",
                  })}
                >
                  {label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");

  menuToggle?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
    menuIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
  });
</script>
